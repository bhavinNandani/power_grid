<div class="power-grid-container w-full" data-controller="power-grid-table">
  
  <div class="w-full space-y-4 font-inter text-slate-800 dark:text-slate-200">
  
  <!-- Control Bar: Search (Left) & Filters (Right) -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 pb-4">
    
    <!-- Left: Search -->
    <% if @grid.searchable? %>
      <div class="w-full md:w-96 relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-slate-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
        </div>
        <%= text_field_tag :q, params[:q], placeholder: "Search records...", 
            class: "block w-full pl-10 pr-3 py-2.5 border border-transparent focus:border-indigo-500 focus:ring-0 bg-gray-50 dark:bg-slate-800 rounded-lg text-sm transition-all shadow-sm group-hover:bg-white", 
            data: { action: "input->power-grid-table#search" },
            form: "power_grid_form_#{request.path.parameterize}" 
        %>
      </div>
    <% else %>
      <div></div> <!-- Spacer -->
    <% end %>

    <!-- Right: Filters & Per Page -->
    <div class="flex flex-wrap items-center justify-end gap-3 w-full md:w-auto">
      <%= form_with url: request.path, method: :get, data: { turbo_frame: "power_grid_table", turbo_action: "advance", power_grid_table_target: "form" }, class: "flex flex-wrap items-center gap-3", id: "power_grid_form_#{request.path.parameterize}" do |f| %>
        <% params.except(:per_page, :page, :q, *(@grid.class.defined_filters.keys)).each do |key, value| %>
           <%= hidden_field_tag key, value %>
        <% end %>

         <!-- Dynamic Filters -->
         <% @grid.class.defined_filters.each do |name, options| %>
            <div class="relative">
               <% if options[:collection] %>
                 <%= select_tag name, options_for_select(options[:collection], params[name]), 
                     include_blank: "All #{name.to_s.humanize.pluralize}",
                     class: "block w-full h-10 min-w-[140px] pl-3 pr-8 rounded-lg border-0 bg-gray-50 dark:bg-slate-800 py-2 text-slate-700 dark:text-slate-200 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6 cursor-pointer font-medium",
                     onchange: "this.form.requestSubmit()"
                 %>
               <% else %>
                 <%= text_field_tag name, params[name], placeholder: "#{name.to_s.humanize}",
                     class: "block w-full h-10 min-w-[140px] rounded-lg border-0 bg-gray-50 dark:bg-slate-800 py-2 pl-3 text-slate-700 dark:text-slate-200 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6",
                     data: { action: "input->power-grid-table#search" }
                 %>
               <% end %>
            </div>
         <% end %>
         
        <!-- Per Page Dropdown -->
        <div class="relative">
           <%= select_tag :per_page, options_for_select([10, 25, 50, 100], @grid.per_page), 
               class: "block h-10 rounded-lg border-0 bg-gray-50 dark:bg-slate-800 py-2 pl-3 pr-8 text-slate-700 dark:text-slate-200 ring-1 ring-inset ring-slate-200 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6 cursor-pointer font-medium",
               onchange: "this.form.requestSubmit()"
           %>
        </div>

      <% end %>
    </div>
    
  </div>

  <%= turbo_frame_tag "power_grid_table", class: "w-full block" do %>
    <div class="overflow-x-auto w-full">
      <table class="min-w-full whitespace-nowrap text-left border-separate border-spacing-y-0">
        <thead>
          <tr class="border-b border-slate-200/60 dark:border-slate-700/60">
            <% columns.each do |key, options| %>
              <th scope="col" class="px-4 py-4 text-xs font-bold text-slate-400 uppercase tracking-wider <%= options[:class] %>">
                <% label = options[:header] || key.to_s.humanize %>
                <% if options[:sortable] %>
                  <%= link_to request.params.merge(order: key, dir: (params[:order] == key.to_s && params[:dir] == "asc" ? "desc" : "asc")), class: "group inline-flex items-center hover:text-slate-600 dark:hover:text-slate-200 transition-colors", data: { turbo_action: "advance" } do %>
                    <%= label %>
                    <span class="ml-1 flex-none rounded text-slate-400 group-hover:text-indigo-500 transition-colors">
                      <% if params[:order] == key.to_s %>
                        <%= params[:dir] == "asc" ? "▲" : "▼" %>
                      <% else %>
                        <svg class="h-4 w-4 opacity-0 group-hover:opacity-100" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M10 3a.75.75 0 01.55.24l3.25 3.5a.75.75 0 11-1.1 1.02L10 4.852 7.3 7.76a.75.75 0 01-1.1-1.02l3.25-3.5A.75.75 0 0110 3zm-3.76 9.2a.75.75 0 011.06.04l2.7 2.908 2.7-2.908a.75.75 0 111.1 1.02l-3.25 3.5a.75.75 0 01-1.1 0l-3.25-3.5a.75.75 0 01.04-1.06z" clip-rule="evenodd" />
                        </svg>
                      <% end %>
                    </span>
                  <% end %>
                <% else %>
                  <%= label %>
                <% end %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
          <% records.each_with_index do |record, index| %>
            <tr class="hover:bg-slate-50/50 dark:hover:bg-slate-800/50 transition-colors group">
              <% columns.each do |key, options| %>
                <td class="px-4 py-4 align-middle text-sm text-slate-600 dark:text-slate-300 font-medium <%= options[:class] %>">
                  <% if options[:block] %>
                    <%= options[:block].call(record) %>
                  <% else %>
                    <%= record.send(key) %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
          <% if records.empty? %>
            <tr>
               <td colspan="<%= columns.size %>" class="px-6 py-10 text-center text-sm text-slate-500 dark:text-slate-400">
                 No matching records found
               </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Footer -->
    <div class="flex items-center justify-between border-t border-slate-200 bg-white px-4 py-3 sm:px-6 dark:bg-slate-900 dark:border-slate-700 rounded-b-lg">
       <!-- Entries Info -->
       <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-slate-700 dark:text-slate-300">
              Showing <span class="font-medium"><%= @grid.page_range_start %></span> to <span class="font-medium"><%= @grid.page_range_end %></span> of <span class="font-medium"><%= @grid.total_count %></span> entries
            </p>
          </div>
          <div>
            <!-- Numbered Pagination Controls -->
            <% if @grid.total_pages > 1 %>
             <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
               <% if @grid.current_page > 1 %>
                 <%= link_to "Previous", request.params.merge(page: @grid.current_page - 1), class: "relative inline-flex items-center rounded-l-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:ring-slate-600 dark:hover:bg-slate-800", data: { turbo_action: "advance" } %>
               <% end %>
               
               <% @grid.pagination_window.each do |page| %>
                 <% if page == :gap %>
                   <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-700 ring-1 ring-inset ring-slate-300 focus:outline-offset-0 dark:text-slate-200 dark:ring-slate-600">...</span>
                 <% elsif page == @grid.current_page %>
                   <span class="relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"><%= page %></span>
                 <% else %>
                   <%= link_to page, request.params.merge(page: page), class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-900 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:text-slate-200 dark:ring-slate-600 dark:hover:bg-slate-800", data: { turbo_action: "advance" } %>
                 <% end %>
               <% end %>

               <% if @grid.current_page < @grid.total_pages %>
                 <%= link_to "Next", request.params.merge(page: @grid.current_page + 1), class: "relative inline-flex items-center rounded-r-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:ring-slate-600 dark:hover:bg-slate-800", data: { turbo_action: "advance" } %>
               <% end %>
            </nav>
            <% end %>
          </div>
       </div>
    </div>
  <% end %>
</div>
