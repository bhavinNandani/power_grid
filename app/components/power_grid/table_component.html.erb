<div class="power-grid-container w-full" data-controller="power-grid-table">
  
  <div class="w-full space-y-4 font-inter text-slate-800 dark:text-slate-200">
  
  <!-- Control Bar: Search (Left) & Filters (Right) -->
  <% unless @grid.try(:hide_controls) %>
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 pb-4">
    
    <!-- Left: Search -->
    <% if @grid.searchable? %>
      <div class="w-full md:w-96 relative group">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-4 w-4 text-slate-400 group-focus-within:text-indigo-500 transition-colors" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
          </svg>
        </div>
        <%= text_field_tag :q, params[:q], placeholder: "Search records...", 
            class: "block w-full pl-9 pr-3 py-2 border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 rounded-lg text-sm text-slate-700 dark:text-slate-200 placeholder-slate-400 transition-all shadow-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 hover:border-slate-300 dark:hover:border-slate-600", 
            data: { action: "input->power-grid-table#search" },
            form: "power_grid_form_#{request.path.parameterize}" 
        %>
      </div>
    <% else %>
      <div></div> <!-- Spacer -->
    <% end %>

    <!-- Right: Filters & Per Page -->
    <div class="flex flex-wrap items-center justify-end gap-3 w-full md:w-auto">
      <%= form_with url: request.path, method: :get, data: { turbo_frame: "power_grid_table", turbo_action: "advance", power_grid_table_target: "form" }, class: "flex flex-wrap items-center gap-3", id: "power_grid_form_#{request.path.parameterize}" do |f| %>
        <% params.except(:per_page, :page, :q, *(@grid.class.defined_filters.keys)).each do |key, value| %>
           <%= hidden_field_tag key, value %>
        <% end %>

         <!-- Dynamic Filters -->
         <% @grid.class.defined_filters.each do |name, options| %>
            <div class="relative">
               <% if options[:collection] %>
                 <%= select_tag name, options_for_select(options[:collection], params[name]), 
                     include_blank: "All #{name.to_s.humanize.pluralize}",
                     class: "block w-full h-9 min-w-[140px] pl-3 pr-8 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 py-1.5 text-slate-700 dark:text-slate-200 text-sm shadow-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 cursor-pointer hover:border-slate-300 dark:hover:border-slate-600 transition-all font-medium",
                     onchange: "this.form.requestSubmit()"
                 %>
               <% else %>
                 <%= text_field_tag name, params[name], placeholder: "#{name.to_s.humanize}",
                     class: "block w-full h-9 min-w-[140px] rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 py-1.5 pl-3 text-slate-700 dark:text-slate-200 text-sm shadow-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 placeholder-slate-400 hover:border-slate-300 dark:hover:border-slate-600 transition-all",
                     data: { action: "input->power-grid-table#search" }
                 %>
               <% end %>
            </div>
         <% end %>
         
        <!-- Per Page Dropdown -->
        <div class="relative">
           <%= select_tag :per_page, options_for_select([10, 25, 50, 100], @grid.per_page), 
               class: "block h-9 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 py-1.5 pl-3 pr-8 text-slate-700 dark:text-slate-200 text-sm shadow-sm focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 cursor-pointer hover:border-slate-300 dark:hover:border-slate-600 transition-all font-medium",
               onchange: "this.form.requestSubmit()"
           %>
        </div>

      <% end %>
    </div>
    
  </div>
  <% end %>

  <%= turbo_frame_tag "power_grid_table", class: "w-full block" do %>
    <div class="overflow-x-auto w-full">
      <table class="min-w-full whitespace-nowrap text-left border-separate border-spacing-y-0">
        <thead>
          <tr class="border-b border-slate-200 dark:border-slate-700">
            <% columns.each do |key, options| %>
              <th scope="col" class="px-4 py-3 text-xs font-semibold text-slate-500 uppercase tracking-wide dark:text-slate-400 <%= options[:class] %>">
                <% label = options[:header] || key.to_s.humanize %>
                <% if options[:sortable] %>
                  <%= link_to request.params.merge(order: key, dir: (params[:order] == key.to_s && params[:dir] == "asc" ? "desc" : "asc")), class: "group inline-flex items-center hover:text-slate-700 dark:hover:text-slate-200 transition-colors", data: { turbo_action: "advance" } do %>
                    <%= label %>
                    <span class="ml-1 flex-none rounded text-slate-400 group-hover:text-indigo-500 transition-colors">
                      <% if params[:order] == key.to_s %>
                        <%= params[:dir] == "asc" ? "▲" : "▼" %>
                      <% else %>
                        <svg class="h-3 w-3 opacity-0 group-hover:opacity-100 transition-opacity" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M10 3a.75.75 0 01.55.24l3.25 3.5a.75.75 0 11-1.1 1.02L10 4.852 7.3 7.76a.75.75 0 01-1.1-1.02l3.25-3.5A.75.75 0 0110 3zm-3.76 9.2a.75.75 0 011.06.04l2.7 2.908 2.7-2.908a.75.75 0 111.1 1.02l-3.25 3.5a.75.75 0 01-1.1 0l-3.25-3.5a.75.75 0 01.04-1.06z" clip-rule="evenodd" />
                        </svg>
                      <% end %>
                    </span>
                  <% end %>
                <% else %>
                  <%= label %>
                <% end %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100 dark:divide-slate-800/50">
          <% records.each_with_index do |record, index| %>
            <tr class="hover:bg-slate-50/80 dark:hover:bg-slate-800/50 transition-colors group">
              <% columns.each do |key, options| %>
                <td class="px-4 py-3 align-middle text-sm text-slate-600 dark:text-slate-300 font-medium <%= options[:class] %>">
                  <% if options[:block] %>
                    <%= options[:block].call(record) %>
                  <% else %>
                    <%= record.send(key) %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
          <% if records.empty? %>
            <tr>
               <td colspan="<%= columns.size %>" class="px-6 py-12 text-center text-sm text-slate-500 dark:text-slate-400">
                 <div class="flex flex-col items-center justify-center space-y-2">
                   <svg class="h-8 w-8 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                   </svg>
                   <p>No matching records found</p>
                 </div>
               </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Footer -->
    <div class="flex items-center justify-center pt-6 pb-2">
       <% if @grid.total_pages > 1 %>
         <nav class="isolate inline-flex items-center space-x-1" aria-label="Pagination">
           <!-- Prev -->
           <% if @grid.current_page > 1 %>
             <%= link_to request.params.merge(page: @grid.current_page - 1), class: "inline-flex items-center justify-center w-8 h-8 rounded-lg text-slate-500 hover:text-indigo-600 hover:bg-slate-50 transition-all", data: { turbo_action: "advance" } do %>
               <span class="sr-only">Previous</span>
               <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                 <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
               </svg>
             <% end %>
           <% end %>
           
           <% @grid.pagination_window.each do |page| %>
             <% if page == :gap %>
               <span class="inline-flex items-center justify-center w-8 h-8 text-sm text-slate-400">...</span>
             <% elsif page == @grid.current_page %>
               <span class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm font-semibold bg-indigo-50 text-indigo-600 ring-1 ring-inset ring-indigo-500/10"><%= page %></span>
             <% else %>
               <%= link_to page, request.params.merge(page: page), class: "inline-flex items-center justify-center w-8 h-8 rounded-lg text-sm font-medium text-slate-500 hover:text-indigo-600 hover:bg-slate-50 transition-all", data: { turbo_action: "advance" } %>
             <% end %>
           <% end %>

           <!-- Next -->
           <% if @grid.current_page < @grid.total_pages %>
             <%= link_to request.params.merge(page: @grid.current_page + 1), class: "inline-flex items-center justify-center w-8 h-8 rounded-lg text-slate-500 hover:text-indigo-600 hover:bg-slate-50 transition-all", data: { turbo_action: "advance" } do %>
               <span class="sr-only">Next</span>
               <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                 <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
               </svg>
             <% end %>
           <% end %>
        </nav>
       <% end %>
    </div>
  <% end %>
</div>
