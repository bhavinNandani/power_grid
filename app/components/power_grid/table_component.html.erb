<div class="power-grid-container w-full bg-white dark:bg-slate-900 rounded-lg shadow ring-1 ring-slate-900/5" data-controller="power-grid-table">
  
  <!-- Top Controls: Per Page & Search & Filters -->
  <div class="bg-white dark:bg-slate-900 p-4 border-b border-slate-200 dark:border-slate-700 sm:px-6 rounded-t-lg">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 text-sm">
      
      <!-- Left: Filters & Per Page -->
      <div class="flex flex-wrap items-center gap-3 w-full md:w-auto">
        <%= form_with url: request.path, method: :get, data: { turbo_frame: "power_grid_table", turbo_action: "advance", power_grid_table_target: "form" }, class: "flex flex-wrap items-center gap-3", id: "power_grid_form_#{request.path.parameterize}" do |f| %>
          <% params.except(:per_page, :page, :q, *(@grid.class.defined_filters.keys)).each do |key, value| %>
             <%= hidden_field_tag key, value %>
          <% end %>
          <!-- Reset page to 1 on update -->
          <%= hidden_field_tag :page, 1 %>

          <!-- Per Page Dropdown -->
          <div class="relative">
             <label for="per_page" style="position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0, 0, 0, 0); white-space: nowrap; border-width: 0;">Per Page</label>
             <%= select_tag :per_page, options_for_select([10, 25, 50, 100], @grid.per_page), 
                 class: "block w-full h-9 min-w-[80px] rounded-md border-0 py-1.5 pl-3 pr-8 text-slate-900 ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-slate-800 dark:text-white dark:ring-slate-600 cursor-pointer",
                 onchange: "this.form.requestSubmit()"
             %>
          </div>

           <!-- Dynamic Filters -->
           <% @grid.class.defined_filters.each do |name, options| %>
              <div class="relative">
                 <% if options[:collection] %>
                   <%= select_tag name, options_for_select(options[:collection], params[name]), 
                       include_blank: "All #{name.to_s.humanize.pluralize}",
                       class: "block w-full h-9 min-w-[140px] rounded-md border-0 py-1.5 pl-3 pr-8 text-slate-900 ring-1 ring-inset ring-slate-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-slate-800 dark:text-white dark:ring-slate-600 cursor-pointer",
                       onchange: "this.form.requestSubmit()"
                   %>
                 <% else %>
                   <%= text_field_tag name, params[name], placeholder: "Filter #{name.to_s.humanize}",
                       class: "block w-full h-9 min-w-[140px] rounded-md border-0 py-1.5 pl-3 text-slate-900 ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-slate-800 dark:text-white dark:ring-slate-600 dark:placeholder-slate-500",
                       data: { action: "input->power-grid-table#search" }
                   %>
                 <% end %>
              </div>
           <% end %>
        <% end %>
      </div>

      <!-- Right: Search -->
      <% if @grid.searchable? %>
        <div class="w-full md:w-auto">
          <label for="search" style="position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0, 0, 0, 0); white-space: nowrap; border-width: 0;">Search</label>
          <div class="relative rounded-full shadow-sm">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3.5">
              <svg class="h-4 w-4 text-slate-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
              </svg>
            </div>
            <%= text_field_tag :q, params[:q], placeholder: "Search records...", 
                class: "block w-full h-9 min-w-[200px] rounded-full border-0 py-1.5 pl-10 pr-4 text-slate-900 ring-1 ring-inset ring-slate-300 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-slate-800 dark:text-white dark:ring-slate-600 dark:placeholder-slate-500 bg-slate-50 hover:bg-white transition-colors", 
                data: { action: "input->power-grid-table#search" },
                form: "power_grid_form_#{request.path.parameterize}" 
            %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>

  <%= turbo_frame_tag "power_grid_table" do %>
    <div class="overflow-x-auto max-h-[70vh]">
      <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
        <thead class="bg-gray-50/95 dark:bg-slate-800/95 sticky top-0 z-10 backdrop-blur-sm shadow-sm">
          <tr>
            <% columns.each do |key, options| %>
              <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-slate-500 uppercase tracking-wider dark:text-slate-400 <%= options[:class] %>">
                <% label = options[:header] || key.to_s.humanize %>
                <% if options[:sortable] %>
                  <%= link_to request.params.merge(order: key, dir: (params[:order] == key.to_s && params[:dir] == "asc" ? "desc" : "asc")), class: "group inline-flex items-center hover:text-slate-700 dark:hover:text-slate-200 transition-colors", data: { turbo_action: "advance" } do %>
                    <%= label %>
                    <span class="ml-2 flex-none rounded text-slate-400 group-hover:text-indigo-500 dark:group-hover:text-indigo-400 transition-colors">
                      <% if params[:order] == key.to_s %>
                        <%= params[:dir] == "asc" ? "▲" : "▼" %>
                      <% else %>
                        <svg class="h-4 w-4 opacity-0 group-hover:opacity-100" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M10 3a.75.75 0 01.55.24l3.25 3.5a.75.75 0 11-1.1 1.02L10 4.852 7.3 7.76a.75.75 0 01-1.1-1.02l3.25-3.5A.75.75 0 0110 3zm-3.76 9.2a.75.75 0 011.06.04l2.7 2.908 2.7-2.908a.75.75 0 111.1 1.02l-3.25 3.5a.75.75 0 01-1.1 0l-3.25-3.5a.75.75 0 01.04-1.06z" clip-rule="evenodd" />
                        </svg>
                      <% end %>
                    </span>
                  <% end %>
                <% else %>
                  <%= label %>
                <% end %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-200 dark:bg-slate-900 dark:divide-slate-700">
          <% records.each_with_index do |record, index| %>
            <tr class="<%= index.even? ? 'bg-white dark:bg-slate-900' : 'bg-slate-50 dark:bg-slate-800/50' %> hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
              <% columns.each do |key, options| %>
                <td class="px-6 py-3 whitespace-nowrap align-middle text-sm text-slate-700 dark:text-slate-200 <%= options[:class] %>">
                  <% if options[:block] %>
                    <%= options[:block].call(record) %>
                  <% else %>
                    <%= record.send(key) %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
          <% if records.empty? %>
            <tr>
               <td colspan="<%= columns.size %>" class="px-6 py-10 text-center text-sm text-slate-500 dark:text-slate-400">
                 No matching records found
               </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Footer -->
    <div class="flex items-center justify-between border-t border-slate-200 bg-white px-4 py-3 sm:px-6 dark:bg-slate-900 dark:border-slate-700 rounded-b-lg">
       <!-- Entries Info -->
       <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
          <div>
            <p class="text-sm text-slate-700 dark:text-slate-300">
              Showing <span class="font-medium"><%= @grid.page_range_start %></span> to <span class="font-medium"><%= @grid.page_range_end %></span> of <span class="font-medium"><%= @grid.total_count %></span> entries
            </p>
          </div>
          <div>
            <!-- Numbered Pagination Controls -->
            <% if @grid.total_pages > 1 %>
             <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
               <% if @grid.current_page > 1 %>
                 <%= link_to "Previous", request.params.merge(page: @grid.current_page - 1), class: "relative inline-flex items-center rounded-l-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:ring-slate-600 dark:hover:bg-slate-800", data: { turbo_action: "advance" } %>
               <% end %>
               
               <% @grid.pagination_window.each do |page| %>
                 <% if page == :gap %>
                   <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-700 ring-1 ring-inset ring-slate-300 focus:outline-offset-0 dark:text-slate-200 dark:ring-slate-600">...</span>
                 <% elsif page == @grid.current_page %>
                   <span class="relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"><%= page %></span>
                 <% else %>
                   <%= link_to page, request.params.merge(page: page), class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-slate-900 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:text-slate-200 dark:ring-slate-600 dark:hover:bg-slate-800", data: { turbo_action: "advance" } %>
                 <% end %>
               <% end %>

               <% if @grid.current_page < @grid.total_pages %>
                 <%= link_to "Next", request.params.merge(page: @grid.current_page + 1), class: "relative inline-flex items-center rounded-r-md px-2 py-2 text-slate-400 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 focus:z-20 focus:outline-offset-0 dark:ring-slate-600 dark:hover:bg-slate-800", data: { turbo_action: "advance" } %>
               <% end %>
            </nav>
            <% end %>
          </div>
       </div>
    </div>
  <% end %>
</div>
